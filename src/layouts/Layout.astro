---
interface Props {
	title: string;
}

import SpaceHeader from '../components/SpaceHeader.astro'

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Space Tourism Website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<SpaceHeader />
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Bellefair&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Bellefair&display=swap');

	:root {
		--neutral-100: rgb(255, 255, 255);
		--neutral-200: rgb(230, 230, 230);
		--neutral-300: rgb(200, 200, 200);
		--neutral-400: rgb(170, 170, 170);
		--neutral-500: rgb(109, 109, 109);
		--neutral-600: rgb(60, 60, 60);
		--neutral-700: rgb(41, 41, 41);
		--neutral-800: rgb(27, 27, 27);
		--neutral-900: rgb(10, 10, 10);

		--light-blue-gray: rgb(207, 212, 251);
		--dark-blue-gray: rgb(71, 73, 84);
		--darker-blue-gray: rgb(53, 56, 65);

		--txt-primary: var(--neutral-100);
		--txt-secondary: var(--neutral-400);

		--fs-100: .25rem;
		--fs-150: .40rem;
		--fs-200: .50rem;
		--fs-250: .75rem;
		--fs-300: .8rem;
		--fs-350: .9rem;
		--fs-400: 1rem;
		--fs-450: 1.125rem;
		--fs-500: 1.25rem;
		--fs-550: 1.4rem;
		--fs-600: 1.6rem;
		--fs-650: 1.7rem;
		--fs-700: 2rem;
		--fs-750: 2.2rem;
		--fs-800: 2.5rem;
		--fs-850: 2.8rem;
		--fs-900: 3rem;
		--fs-950: 3.5rem;

		--fw-regular: 400;
		--fw-medium: 500;
		--fw-semibold: 600;
		--fw-bold: 700;
		--fw-extrabold: 800;

		--ff-serif: "Bellefair", serif;
		--ff-sans-serif: "Barlow", sans-serif;
	}

	@keyframes slideOut {
		0% {
			opacity: 1;
		}
		100% {
			transform: translateX(-150px);
			opacity: 0;
		}
	}

	@keyframes slideIn {
		0% {
			opacity: 0;
			transform: translateX(-150px);
		}
		100% {
			opacity: 1;
			transform: translateX(0px);
		}
	}

	@keyframes slideOff {
		0% {
			opacity: 1;
		}
		100% {
			opacity: 0;
			transform: translateY(150px);
		}
	}

	@keyframes slideOn {
		0% {
			opacity: 0;
			transform: translateY(150px);
		}
		100% {
			opacity: 1;
			transform: translateY(0px);
		}
	}

	@keyframes fadeOut {
		0% {
			opacity: 1;
		}
		100% {
			opacity: 0;
		}
	}

	@keyframes fadeIn {
		0% {
			opacity: 0;
		}
		100% {
			opacity: 1;
		}
	}

	* {
		margin: 0;
		padding: 0;
	}

	*, *::after, *::before {
		box-sizing: border-box;
	}

	svg, img, picture {
		width: 100%;
		display: block;
	}

	h1, h2, h3, h4, h5, h6 {
		line-height: 1;
		font-family: var(--ff-serif);
	}

	a {
		text-decoration: none;
		color: currentColor
	}

	html {
		overflow-x: hidden;
		scroll-behavior: smooth;
		color: var(--txt-primary);
		font-family: var(--ff-sans-serif);
		font-size: 17px;
		line-height: 1.6;
	}

	button, textarea, input {
		font-family: var(--ff-serif);
		font-size: inherit;
	}

	/* Utility classes */
	.container {
		--width: var(--custom-width, 1200px);
		--padding: var(--custom-padding, 1rem);

		width: min(var(--width), 100% - (var(--padding) * 2));
		margin-inline: auto;
	}

	.flow > * + * {
		margin-top: var(--flow-space, 1em);
	}

	.mobile-only {
		display: none;
	}

	@media(width <= 780px) {
		.mobile-only {
			display: block;
		}
	}

  .sd-nav-list-wrapper {
    top: 0;
    position: absolute;
    max-width: 1200px;
  }

  .sd-nav-list {
    font-family: var(--ff-sans-serif);
    letter-spacing: 2.5px;
    font-weight: 300;
    text-transform: uppercase;
    font-size: 1.3em;
  }

  .sd-nav-list::before {
    font-weight: var(--fw-bold);
    color: var(--dark-blue-gray);
    padding-right: .8em;
    content: '0' counter(section);
  }

	@media(width <= 1020px) {
		.sd-nav-list-wrapper {
			top: 13%;
		}
	}
	
	@media(width <= 780px) {
		.sd-nav-list-wrapper {
			font-size: .8em;
		}
	}
</style>